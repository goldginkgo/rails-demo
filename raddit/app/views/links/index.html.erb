<% @links.each do |link| %>
<div>
  <h2>
    <%= link_to link.title, link %><br>
    <small class="text-muted">Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.email %></small><br>
    <div class="btn-group">
    	<%= link_to 'Visit link', link.url, class: "btn btn-secondary btn-sm" %>
      <%= link_to like_link_path(link), method: :put, class: "btn btn-secondary btn-sm" do %>
      <%= fa_icon "caret-up" %>
      Upvote
      <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-secondary btn-sm" do %>
      <%= fa_icon "caret-up" %>
      Downvote
      <%= link.get_downvotes.size %>
      <% end %>
    </div>
  <h2>
  <hr class="my-4">
</div>
<% end %>
